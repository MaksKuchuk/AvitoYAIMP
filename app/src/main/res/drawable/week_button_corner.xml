<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--<item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dayScrollBGC"/>
        </shape>
    </item>-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <solid android:color="@color/dayScrollBTN"/>
        </shape>
    </item>
    <item android:top="40dp" android:bottom="11dp" android:left="7dp" android:right="20dp">
        <rotate
            android:pivotX="50%"
            android:pivotY="50%"
            android:fromDegrees="30">
            <shape android:shape="rectangle" >
                <corners android:radius="2dp"/>
                <solid android:color="@android:color/white" />
            </shape>
        </rotate>
    </item>
    <item android:top="40dp" android:bottom="11dp" android:left="20dp" android:right="7dp">
        <rotate
            android:pivotX="50%"
            android:pivotY="50%"
            android:fromDegrees="-30">
            <shape android:shape="rectangle" >
                <corners android:radius="2dp"/>
                <solid android:color="@android:color/white" />
            </shape>
        </rotate>
    </item>
</layer-list>